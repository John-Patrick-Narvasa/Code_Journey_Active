package Book;

public class Book {
	private String title;
	private String author;
	private String isbn;
	private boolean isAvailable;
	
	public Book(String title, String author, String isbn) {
		this.title = title;
		this.author = author;
		this.isbn = isbn;
		}
	
	public void borrow() {
		isAvailable = false;
	}
	
	public void returnBook() {
		isAvailable = true;
	}
	
	public void getStatus() {
		String available = "";
		if (isAvailable == false) {
			available = "Available";
		}
		else {
			available = "Available";
		}
		System.out.print(
				"Title: " + title + "\n"
				+ "Author: " + author + "\n"
				+ "ISBN: " + isbn + "\n"
				+ "Output: " + available);
	}
}
